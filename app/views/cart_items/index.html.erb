<h4>ショッピングカート</h4>
<%= link_to"カートを空にする", destroy_all_cart_items_path, method: :delete %>

<table>
  <thead>
    <tr>
     <td>商品名</td>
     <td>単価（税込）</td>
     <td>数量</td>
     <td>小計</td>
     <td></td>
    </tr>
  </thead>
  
  <tbody>
     <% @cart_items.each do |cart_item| %>
     <tr>
        <td>
          <%= attachment_image_tag cart_item, :image, :fill, 10, 10, fallback: "no_image.jpg" %><%= cart_item.product.name %>    
        </td>
        <td>
          <%= cart_item.product.price * 1.1 to_s(:delimited) %>
        </td>
       
     </tr>
     <% end %>
  </tbody>
    
</table>

