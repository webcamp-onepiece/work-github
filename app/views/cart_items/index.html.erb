<h4>ショッピングカート</h4>
<%= link_to"カートを空にする", destroy_all_cart_items_path, method: :delete %>

<table>
  <thead>
    <tr>
     <td>商品名</td>
     <td>単価（税込）</td>
     <td>数量</td>
     <td>小計</td>
     <td></td>
    </tr>
  </thead>
  
  <tbody>
     <% @cart_items.each do |cart_item| %>
     <tr>
        <td>
          <%= attachment_image_tag cart_item, :image, :fill, 10, 10, fallback: "no_image.jpg" %>
          <%= cart_item.product.name %>    
        </td>
        <td>
          <%= (cart_item.product.add_tax_price.to_s(:delimited)).floor %>
        </td>
        <td>
          <%= form_with model:cart_item, local:true do |f| %>
          <%= f.select :count, min:1, max:10 %>
          <%= f.submit "変更", class:"btn btn-success" %>
        </td>
        <td>
          <%= (cart_item.product.add_tax_price * cart_item.count.to_s(:delimited)) %>
        </td>
        <td>
          <%= link_to"削除する", cart_item_path(cart_item.id), method: :delete,  class:"btn btn-sm btn-danger" %>
        </td>
     </tr>
     <% end %>
  </tbody>
</table>

