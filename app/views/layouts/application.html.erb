
<!DOCTYPE html>
<html>
  <head>
    <title>WorkGithub</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.9.0/css/all.css">
  </head>

  <body>
    <header>

       <nav class="navbar navbar-expand-lg">
        <div class="container">
          <%= link_to"LOGO", root_path %>
          <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <% if customer_signed_in? %>

         ようこそ、<%= @customer.family_name %>さん!
        <li>
         <%= link_to"マイページ", customers_my_page_path %>
        </li>
        <li>
         <%= link_to"商品一覧", "customers_products_path" %>
        </li>
        <li>
         <%= link_to"カート", "cart_items_path(current_customer)" %>
        </li>
        <li>
         <%= link_to"ログアウト", destroy_customer_session_path, method: :delete %>
        </li>

      <% elsif admin_signed_in? %>
        <li>
         <%= link_to"商品一覧", admin_products_path %>
        </li>
        <li>
         <%= link_to"会員一覧", admin_customers_path %>
        </li>
        <li>
         <%= link_to"注文履歴一覧", admin_top_path %>
        </li>
        <li>
         <%= link_to"ジャンル一覧", admin_products_genres_path %>
        </li>
        <li>
         <%= link_to"ログアウト", destroy_admin_session_path, method: :delete %>
        </li>

      <% else %>
        <li>
          <%= link_to"About", about_path %>
        </li>
        <li>
          <%= link_to"商品一覧", customers_products_path %>
         </li>
         <li>
           <%= link_to"新規登録", new_customer_registration_path %>
         </li>
         <li>
           <%= link_to"ログイン", new_customer_session_path %>
         </li>
       <% end %>
      </nav>
    </header>


    <main><%= yield %></main>


    <footer>
     <div class="container mt-5">
      <div class="row">
      　<div class="mx-auto">
        　<p>@one piece</p>
    　　</div>
    　 </div>
    　</div>
    </footer>
  </body>
</html>
