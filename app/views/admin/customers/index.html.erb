<div class="container">
<div class="row">
        
<div class='col-md-2'></div>

<div class='col-md-8'>
<h1 class="text-center">会員一覧</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th class="text-center" style="width: 20%">会員ID</th>
      <th class="text-center" style="width: 20%">氏名</th>
      <th class="text-center" style="width: 20%">メールアドレス</th>
      <th class="text-center" style="width: 20%">ステータス</th>
    </tr>
  </thead>
  
  <tbody>
    <% @customers.sort.each do |customer| %>
      <tr>
        <td class="text-center"><%= customer.id %></td>
        <td class="text-center">
            <%= link_to admin_customer_path(customer) do  %>
            <%= customer.family_name %><%= customer.first_name %>
            <% end %>
        </td>
        <td class="text-center"><%= customer.email %></td>
        <td class="text-center">
             <% if customer.is_deleted %>
             <p style="color: darkgray;">退会</p>
             <% else %>
             <p style="color: limegreen;">有効</p>
             <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div class='col-md-2'></div>
</div>
</div>

<%= paginate @customers %>