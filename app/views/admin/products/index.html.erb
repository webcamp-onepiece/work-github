<h1>商品一覧</h1>
  <div class="col-xs-10 col-xs-offset-1">
    <%= link_to new_admin_product_path, class: "btn btn-warning pull-right new_product" do %>
    <i class="fas fa-plus"></i>

    <% end %>
    <table class="table table-hover table-bordered table-condensed">
      <thead>
        <tr class="info">
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
				<% @products.each do |product| %>
  				<tr>
            <td class="info col-xs-1">
              <%= product.id %>
            </td>
            <td class="text-left">
              <%= link_to admin_product_path(product), class: "btn-link" do %>
                <%= product.name %>
              <% end %>
            </td>
            <td class="text-right col-xs-1">
              ¥<%= product.price.to_s(:delimited) %>
            </td>
            <td class="text-left col-xs-3">
              <%= product.genre.name %>
            </td>
            <td class="col-xs-2">
              <% if product.is_active == true %>
      					<p><i class="fas fa-bullseye red"></i>販売中</p>
      				<% elsif product.is_active == false %>
      					<p><i class="fas fa-bullseye blue"></i>販売停止中</p>
      				<% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>