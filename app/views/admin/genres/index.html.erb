<div class="container">
  <div class="row"> 
    <div class="col-md-3"></div>  
      <div class="col-md-6">
    <h1 class="text-center">ジャンル一覧・追加</h1>
  　　<%= form_with model: [:admin, @genre], local: true do |f| %>
            <%= f.text_field :name, :placeholder => "新しいジャンル名"   %>
            <%= f.submit "新規登録", class: "btn btn-outline-secondary" %>
      <% end %>

        <table  class="table table-striped">
          <thead class="text-center">
            <tr>
              <th><strong>ジャンル名</strong></th>
              <th></th>
            </tr>
          </thead>
    
          <tbody class="text-center">
            <% @genres.each do |genre| %>
              <tr>
                <td><%= genre.name %></td>
                <td><%= link_to "編集", edit_admin_genre_path(genre) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>  
    <div class="col-md-3"></div>  
  </div>
</div>
