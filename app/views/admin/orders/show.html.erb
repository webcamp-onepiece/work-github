<h2>注文履歴詳細</h2>
  <div class="row">
    <div class="col-xs-12" >
      <div class="col-xs-9">
    	  <div class="field">
    		  <div class="col-xs-4">
    			  購入者
    		  </div>
    		  <div class="col-xs-8">
    		    <%= @order.name %>
    		  </div>
    		</div>

    		<div class="field">
    		  <div class="col-xs-4">
    			  注文日
    		  </div>
    		  <div class="col-xs-8">
    		    <%= @order. %>
    		  </div>
    		</div>

  	     <div class="field">
  	       <div class="col-xs-4">
  	        配送先
  	       </div>
  	       <div class="col-xs-8">
  	         <%= @order.) %>
  	       </div>
  	     </div>

    	   <div class="field">
    	     <div class="col-xs-4">
    	       支払い方法
    	     </div>
    	     <div class="col-xs-8">
    	       <%= @order.payment_method %>
    	     </div>
    	   </div>

 	      <%= form_with model: [:admin, @order], local: true do |f| %>
 	      <div class="col-xs-4">注文ステータス</div>
      	<div class="col-xs-6">
          <%= f.select %>
        </div>
      	<div class="actions">
          <div class="col-xs-2"><%= f.submit '更新'  ,class: "btn btn-primary" %></div>
      	</div>
      <% end %>
      </div>

	  <div class="buyer-order col-xs-9">
			<table class="table table-hover table-bordered table-inverse">
			    <thead>
			        <tr class="info">
			          <th>商品名</th>
			          <th>単価（税込）</th>
			          <th>数量</th>
			          <th>小計</th>
			          <th>製作ステータス</th>
			        </tr>
			    </thead>
				<tbody>
				<% @order_details.each do |order_detail| %>
					<tr>
			            <td class="text-left">
			            </td>
			            <td class="text-right">
			              ¥<%=  %>
			            </td>
			            <td class="text-right">
			              <%=  %>
			            </td>
			            <td class="text-right">
			              <%=  %>
			            </td>
			            <%= form_with %>
			            <td>
			            	<%= f.select : %>
			            	<%= f.submit '更新'  ,class: "btn btn-warning" %>
			            </td>
			            <% end %>
			      	</tr>
				<% end %>
				</tbody>
			</table>
	  </div>

	  <div class="col-xs-3  billing">
			<table class="table table-hover table-bordered table-condensed">
				<tr>
            		<th class="info">商品合計</th>
					<td>¥<%= %></td>
				</tr>
				<tr>
					<th class="info">送料</th>
					<td>¥<%= %></td>
				</tr>
				<tr>
					<th class="info">請求金額合計</th>
					<td>¥<%=  %></td>
				</tr>
		    </table>
	  </div>
    <div class="col-xs-12">
      <%= link_to "戻る", admin_orders_path%>
    </div>
	  </div>
  </div>
