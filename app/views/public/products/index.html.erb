<div class="container">

<h1>商品一覧</h1><p>(全<%= @products.count %>件)</p>
<!--ジャンル検索したらジャンル一覧-->

<div class="row">
 <div class="col-md-12 d-flex flex-wrap justify-content-around">

    <% @products.each do |product| %>
     <div>
      <div>
        <%= link_to customers_product_path(product) do %>
        <%= attachment_image_tag product, :image, :fill, 200, 200, fallback: "no_image.jpg", size: "200x200" %>
       </div>
     <% end %>

      <!--<%= link_to customers_product_path(product) do %><%= product.name %> <% end %></div>-->


     <div class="text-center mb-3">¥<%= product.add_tax_price.to_s(:delimited) %> </div>
    </div>

    <% end %>
    </div>
 </div>


<%= paginate @product %>

</div>