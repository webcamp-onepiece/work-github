<div class="container">
 
<h1>商品一覧</h1><p>(全<%= @products.count %>件)</p>
<!--ジャンル検索したらジャンル一覧-->

<div class="d-flex flex-wrap justify-content-center">
 <% @products.each do |product| %>
  <div>
  <div>
   <%= link_to customers_product_path(product) do %>
   <%= attachment_image_tag product, :image, :fill, 30, 30, fallback: "no_image.jpg" %></div>
   <% end %>
  
  <div> <%= link_to customers_product_path(product) do %><%= product.name %> <% end %></div>


  <div>¥<%= product.add_tax_price.to_s(:delimited) %> </div>
   </div>
     <% end %>
    </div>
</div>


<%= paginate @product %>

</div>