<div class="text-center">
  <h1>新着商品</h1>
</div>
  <div class="row">
     <div class="col-md-8 mx-auto d-flex justify-content-around">
        <% new_products.each do |product| %>
        <div>
          <div>
            <%= link_to  customers_product_path(product) do %>
            <%= attachment_image_tag product, :image, size: "150X150", fallback: "no_image.jpg", size: "150x150" %>
          </div>
          <% end %>
          <div class="text-center">¥<%= product.add_tax_price.to_s(:delimited) %> </div>
        </div>
       <% end %>
     </div>
  </div>