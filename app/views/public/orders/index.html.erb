<h2>注文履歴一覧</h2>
<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at %></td>
        <td>
          〒<%= order.receiver_postal_code %><br>
          <%= order.receiver_address %><br>
          <%= order.customer.family_name %><%= order.customer.first_name %>
        </td>
        <td>
          <% order.order_products.each do |order_product| %>
            <%= order_product.product.name %><br>
          <% end %>
        </td>
        <td><%= total(order) %></td>
        <td><%= order.status %></td>
        <td><%= link_to "表示する", order_path(order) %></td>
      </tr>
    <% end %>
  </tbody>
</table>